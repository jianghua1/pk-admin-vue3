{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "components.d.ts",
    "auto-imports.d.ts",
    "typed-router.d.ts",
    "mock/**/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "moduleResolution": "Bundler",
    "types": ["element-plus/global", "unplugin-vue-router/client"],
    "noImplicitAny": false
  }
}
